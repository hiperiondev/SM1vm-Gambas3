Public Sub Form_Open()
  Me.Title = "Dump Memory"
  lSTART.text = "START"
  lSTOP.text = "STOP"
  lSTART.font.size = 7
  lSTOP.font.size = 7
  tbSTART.font.size = 7
  tbSTOP.font.size = 7
  tbDUMP.font.size = 9
  bDUMP.text = "DUMP"
  tbSTOP.text = Val(FMain.tbramSize.text) - 1
  tbSTART.text = 0
End


Public Sub bDUMP_Click()
  Dim addr As Long
  If Val(tbSTOP.text) < 0 Or Val(tbSTOP.text) > (Val(FMain.tbramSize.text) - 1) Or Val(tbSTART.text) < 0 Or Val(tbSTART.text) > (Val(FMain.tbramSize.text) - 1) Or Val(tbSTOP.text) < Val(tbSTART.text) Then
    tbDUMP.text = "!!!!!!!!!! ERROR !!!!!!!!!"
  Else
  For addr = Val(tbSTART.text) To Val(tbSTOP.text)
    
  Next
  Endif
End

